<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/randomListFragment">
    <fragment
        android:id="@+id/diceFragment"
        android:name="com.example.yaroslavgorbach.randomizer.dice.DiceFragment"
        android:label="fragment_dice"
        tools:layout="@layout/fragment_dices">
        <argument
            android:name="numberOfDice"
            android:defaultValue="1"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/randomListFragment"
        android:name="com.example.yaroslavgorbach.randomizer.RandomListFragment"
        android:label="fragment_random_list"
        tools:layout="@layout/fragment_random_list" >
        <action
            android:id="@+id/action_randomListFragment_to_dicesFragment"
            app:destination="@id/diceFragment"
            app:enterAnim="@anim/bottom_up"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/bottom_down" />
        <action
            android:id="@+id/action_randomListFragment_to_coinFragment"
            app:destination="@id/coinFragment"
            app:enterAnim="@anim/bottom_up"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/bottom_down" />
        <action
            android:id="@+id/action_randomListFragment_to_numberFragment"
            app:destination="@id/numberFragment"
            app:enterAnim="@anim/bottom_up"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/bottom_down" />
        <action
            android:id="@+id/action_randomListFragment_to_listFragment"
            app:destination="@id/listFragment"
            app:enterAnim="@anim/bottom_up"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/bottom_down" />
        <action
            android:id="@+id/action_randomListFragment_to_matchesFragment"
            app:destination="@id/matchesFragment"
            app:enterAnim="@anim/bottom_up"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/bottom_down" />
    </fragment>
    <fragment
        android:id="@+id/coinFragment"
        android:name="com.example.yaroslavgorbach.randomizer.coin.CoinFragment"
        android:label="fragment_coin"
        tools:layout="@layout/fragment_coin" />
    <fragment
        android:id="@+id/numberFragment"
        android:name="com.example.yaroslavgorbach.randomizer.number.NumberFragment"
        android:label="fragment_number"
        tools:layout="@layout/fragment_number" >
        <argument
            android:name="maxValue"
            app:argType="long"
            android:defaultValue="10L" />
        <argument
            android:name="minValue"
            app:argType="long"
            android:defaultValue="10L" />
        <argument
            android:name="numberOfResults"
            app:argType="integer"
            android:defaultValue="1" />
    </fragment>
    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.yaroslavgorbach.randomizer.list.ListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list" >
        <argument
            android:name="listTitle"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/matchesFragment"
        android:name="com.example.yaroslavgorbach.randomizer.matches.MatchesFragment"
        android:label="fragment_matches"
        tools:layout="@layout/fragment_matches" >
        <argument
            android:name="numberMatches"
            app:argType="integer"
            android:defaultValue="1" />
        <argument
            android:name="numberBurned"
            app:argType="integer"
            android:defaultValue="1" />
    </fragment>
</navigation>